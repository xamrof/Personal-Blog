<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label for="title" class="form-label compStyle">Title</label>
        <input type="text" class="form-control" name="postTitle" id="title">
    </div>
    <div class="mb3">
        <label for="postarea" class="form-label compStyle">Post</label>
        <textarea class="form-control" name="postArea" id="postArea"  rows="6"></textarea>
    </div>
    <button class="btn btn-primary buttonCompose" type="submit" name="button">Publish</button>
</form>

