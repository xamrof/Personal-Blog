<%- include('partials/header'); -%>

<h1>Edit</h1>

<form action="/edit" method="post">
    <div class="mb-3">
        <label for="title" class="form-label compStyle">Title</label>
        <input type="text" class="form-control" name="titleEdit" value="<%= title %>">
    </div>
    <div class="mb3">
        <label for="postarea" class="form-label compStyle">Post</label>
        <textarea class="form-control" name="editArea" rows="6" required><%= content %></textarea>
    </div>
    <input type="hidden" name="idEdit" value="<%= idpost %>">
    <button class="btn btn-primary buttonCompose" type="submit" name="button">Edit Post</button>
</form>



<%- include('partials/footer'); -%>