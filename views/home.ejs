<%- include('partials/header'); -%>

<h1 class="intro"><%= homeStartingContent %></h1>

<!--<p><%= homeStartingContent %></p>-->


<% posts.forEach(post => { %>
   <% if(post.content.length > 300){ %>
        <h2><%= post.title %></h2>
        <p><%= post.content.substring(0, 300) + "... " %><a class="readmore" href="/posts/<%= post._id %>">Read More</a></p>
  <%  }else{ %>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <a class="readmore" href="/posts/<%= post._id %>"> View Post</a>
  <%  } %>
<%}) %>



<%- include ('partials/footer'); -%>